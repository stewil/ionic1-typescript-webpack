{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "pretty": true,
    "stripInternal": true,
    "noEmitHelpers": true,
    "outDir": "ts-out"
  },
  "exclude": [
    "typings",
    "node_modules",
    "bower_components"
  ],
  "compileOnSave": false
}
